            <th>
                @Html.DisplayNameFor(model => model.nomeCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorServico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataExecucao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJClient)
