        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tituloServico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valorServico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataExecucao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPFPrestador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomePrestador)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
